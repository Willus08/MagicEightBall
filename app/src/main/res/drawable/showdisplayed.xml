<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <!-- the ball-->
    <item>
        <shape

            android:shape="oval">

            <solid
                android:color="#000000"/>

            <size
                android:width="250dp"
                android:height="250dp"/>


        </shape>
    </item>
    <!-- the field of liquid-->
    <item>
        <shape android:shape="oval">
            <stroke
                android:color="@android:color/transparent"
                android:width="150dp"/>
            <solid
                android:color="#000020"/>

            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>
<!-- the message holder-->
    <item>
        <vector
            android:height="50dp"
            android:width="30dp"
            android:viewportHeight="800"
            android:viewportWidth="600" >
            <group
                android:name="rotationGroup"
                android:translateY="240"
                android:translateX="100"
                android:pivotX="0"
                android:pivotY="0"
                android:rotation="0" >
                <path
                    android:fillColor="#000077"
                    android:strokeColor="#000020"
                    android:strokeWidth="3"
                    android:pathData="M100,100 L300,100 L200,300 z"/>

            </group>

        </vector>
    </item>
    <!--the sheen to make it look a bit more 3d-->

</layer-list>



